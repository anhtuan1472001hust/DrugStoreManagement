<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="@dimen/size_25"
        android:layout_marginBottom="@dimen/size_25"
        app:cardElevation="@dimen/size_5"
        app:cardCornerRadius="@dimen/size_18"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_medicine"
                android:layout_width="@dimen/size_75"
                android:layout_height="@dimen/size_75"
                android:layout_marginTop="@dimen/size_40"
                android:layout_marginStart="@dimen/size_20"
                android:layout_marginBottom="@dimen/size_40"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/tv_medicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_medicine"
                android:layout_marginStart="@dimen/size_20"
                android:layout_marginTop="@dimen/size_20"
                android:textSize="@dimen/text_size_14"
                style="@style/TextBoldBlueDark"
                android:textColor="@color/blue_text"/>
            <TextView
                android:id="@+id/tv_uses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/img_medicine"
                app:layout_constraintStart_toEndOf="@id/img_medicine"
                app:layout_constraintBottom_toBottomOf="@id/img_medicine"
                android:layout_marginStart="@dimen/size_20"
                android:textSize="@dimen/text_size_13"
                style="@style/TextNormalBlueDark"
                android:textColor="@color/grey_text2"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/img_medicine"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/size_20"
                android:layout_marginStart="@dimen/size_20"
                android:layout_marginEnd="@dimen/size_20"
                android:textSize="@dimen/text_size_14"
                style="@style/TextBoldBlueDark"
                android:textColor="@color/blue_text"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>