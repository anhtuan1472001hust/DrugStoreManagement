<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/size_90"
                android:layout_height="@dimen/size_90"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/size_15"
                android:src="@drawable/ic_user_person_profile_block_account_circle_svgrepo_com"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tv_user_name"
                style="@style/TextBoldBlueDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_8"
                android:layout_marginTop="@dimen/size_12"
                android:gravity="center"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/text_size_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_avatar" />

            <TextView
                android:id="@+id/tv_user_phone"
                style="@style/TextBoldBlueDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_8"
                android:layout_marginTop="@dimen/size_12"
                android:gravity="center"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/text_size_13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_user_name" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/tv_user_phone"
                android:layout_marginTop="@dimen/size_25"
                app:layout_constraintTop_toBottomOf="@id/tv_user_phone">
                <RelativeLayout
                    android:id="@+id/rlt_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/ic_bg_background">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/size_35"
                        android:layout_height="@dimen/size_35"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_person" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextBoldBlueDark"
                    android:textSize="@dimen/text_size_14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rlt_person"
                    android:layout_marginTop="@dimen/size_15"
                    android:text="@string/profile"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_user_phone"
                android:layout_marginTop="@dimen/size_25"
                app:layout_constraintTop_toBottomOf="@id/tv_user_phone">
                <RelativeLayout
                    android:id="@+id/rlt_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/ic_bg_background">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/size_35"
                        android:layout_height="@dimen/size_35"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_notification"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextBoldBlueDark"
                    android:textSize="@dimen/text_size_14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rlt_notification"
                    android:layout_marginTop="@dimen/size_15"
                    android:text="@string/notification"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_30"
                android:layout_marginBottom="@dimen/size_20"
                app:cardElevation="@dimen/size_5"
                app:cardCornerRadius="@dimen/size_24"
                android:layout_marginHorizontal="@dimen/size_25"
                app:layout_constraintTop_toBottomOf="@+id/cl_profile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="4">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ic_calender"
                            android:layout_width="@dimen/size_30"
                            android:layout_height="@dimen/size_30"
                            android:layout_marginTop="@dimen/size_25"
                            android:layout_marginBottom="@dimen/size_25"
                            android:layout_marginStart="@dimen/size_26"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:srcCompat="@drawable/ic_date"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/ic_calender"
                            app:layout_constraintTop_toTopOf="@id/ic_calender"
                            app:layout_constraintBottom_toBottomOf="@id/ic_calender"
                            style="@style/TextBoldBlueDark"
                            android:textColor="@color/grey_text"
                            android:layout_marginStart="@dimen/size_20"
                            android:text="Ca làm việc"
                            android:textSize="@dimen/text_size_15"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/size_26"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:srcCompat="@drawable/ic_next"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="@color/background_color"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ic_customer"
                            android:layout_width="@dimen/size_30"
                            android:layout_height="@dimen/size_30"
                            android:layout_marginTop="@dimen/size_25"
                            android:layout_marginBottom="@dimen/size_25"
                            android:layout_marginStart="@dimen/size_26"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:srcCompat="@drawable/ic_guest"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/ic_customer"
                            app:layout_constraintTop_toTopOf="@id/ic_customer"
                            app:layout_constraintBottom_toBottomOf="@id/ic_customer"
                            style="@style/TextBoldBlueDark"
                            android:textColor="@color/grey_text"
                            android:layout_marginStart="@dimen/size_20"
                            android:text="Khách hàng"
                            android:textSize="@dimen/text_size_15"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/size_26"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:srcCompat="@drawable/ic_next"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="@color/background_color"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ic_company"
                            android:layout_width="@dimen/size_30"
                            android:layout_height="@dimen/size_30"
                            android:layout_marginTop="@dimen/size_25"
                            android:layout_marginBottom="@dimen/size_25"
                            android:layout_marginStart="@dimen/size_26"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:srcCompat="@drawable/ic_source"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/ic_company"
                            app:layout_constraintTop_toTopOf="@id/ic_company"
                            app:layout_constraintBottom_toBottomOf="@id/ic_company"
                            style="@style/TextBoldBlueDark"
                            android:textColor="@color/grey_text"
                            android:layout_marginStart="@dimen/size_20"
                            android:text="Nhân lực"
                            android:textSize="@dimen/text_size_15"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/size_26"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:srcCompat="@drawable/ic_next"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="@color/background_color"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ic_cash"
                            android:layout_width="@dimen/size_30"
                            android:layout_height="@dimen/size_30"
                            android:layout_marginTop="@dimen/size_25"
                            android:layout_marginBottom="@dimen/size_25"
                            android:layout_marginStart="@dimen/size_26"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:srcCompat="@drawable/ic_withdraw"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/ic_cash"
                            app:layout_constraintTop_toTopOf="@id/ic_cash"
                            app:layout_constraintBottom_toBottomOf="@id/ic_cash"
                            style="@style/TextBoldBlueDark"
                            android:textColor="@color/grey_text"
                            android:layout_marginStart="@dimen/size_20"
                            android:text="Rút tiền"
                            android:textSize="@dimen/text_size_15"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/size_26"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:srcCompat="@drawable/ic_next"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>